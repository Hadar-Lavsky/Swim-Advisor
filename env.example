# Swim Advisor Environment Configuration
# Copy this file to .env.local and update the values for your environment

# Backend API Configuration
# Set this to your FastAPI backend URL when it's ready
REACT_APP_API_URL=http://localhost:8000

# Development Settings
REACT_APP_ENVIRONMENT=development

# Feature Flags (for gradual rollout)
REACT_APP_ENABLE_VIDEO_ANALYSIS=true
REACT_APP_ENABLE_MOCK_DATA=true

# Video Upload Settings
REACT_APP_MAX_VIDEO_SIZE_MB=100
REACT_APP_ALLOWED_VIDEO_FORMATS=mp4,mov,avi

# API Timeouts (in milliseconds)
REACT_APP_API_TIMEOUT=30000
REACT_APP_UPLOAD_TIMEOUT=60000
